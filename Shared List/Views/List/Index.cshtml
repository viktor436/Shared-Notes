@model List<Shared_List.Models.UserList>

<h2>Shared Lists</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New List</a>
</p>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userList in Model)
            {
                <tr>
                    <td>@userList.List.Title</td>
                    <td>
                        @userList.List.Description
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "List", new { id = userList.ListId })">Edit</a>
                        <a href="@Url.Action("Delete", "List", new { id = userList.ListId })">Delete</a>
                        <a href="@Url.Action("Share", "List", new { id = userList.ListId })">Share</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No shared Notes found.</p>
}
